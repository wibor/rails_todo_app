<h2>All  unfinished TODO's are here:</h2>

<ul>
  <% @todos.each do |t| %>
  <li>
    <% unless t.done %>
      <%=t.id %>
      <%= link_to t.name, edit_todo_path(t) %>
      <em property="italic">Is Important? </em>
      <%=t.important %>
    <% end %>
  </li>
  <% end %>
</ul>

<h2>Finished TODO`s go here:</h2>

<ul>
  <% @todos.each do |t| %>
      <% if t.done %>
      <li>
        <%= link_to t.name, todo_path(t) %>
        <%=t.important %>
      </li>
      <% end %>
  <% end %>
</ul>
